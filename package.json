{
  "name": "mccal-media-website",
  "version": "1.0.0",
  "description": "McCal Media photo gallery website with development tools",
  "main": "site/index.html",
  "scripts": {
    "dev": "node dev-server.js",
    "start": "npm run dev",
    "build": "node scripts/build.js",
    "serve": "node dev-server.js --production",
    "test-deploy": "./scripts/deploy-test.sh",
    "deploy": "node deploy.js",
    "deploy:quick": "node deploy.js netlify",
    "deploy:all": "node deploy.js all",
    "deploy:netlify": "npx netlify deploy --dir=dist --prod",
    "deploy:vercel": "npx vercel dist --prod",
    "deploy:surge": "npx surge dist/ --domain mccal-media.surge.sh",
    "package": "npm pack",
    "docker:build": "docker build -t mccal-media-website .",
    "docker:run": "docker run -p 8080:8080 mccal-media-website",
    "docker:deploy": "docker build -t mccal-media-website . && docker run -d -p 8080:8080 --name mccal-website mccal-media-website",
    "manifest:generate": "node scripts/enhanced-manifest-generator.js --auto",
    "manifest:dry-run": "node scripts/enhanced-manifest-generator.js --auto --dry --verbose",
    "manifest:single": "node scripts/enhanced-manifest-generator.js",
    "manifest:auto-update": "node scripts/auto-manifest-updater.js",
    "manifest:cleanup": "node scripts/cleanup-manifests.js",
    "manifest:cleanup-preview": "node scripts/cleanup-manifests.js --dry",
    "organize:concerts": "node scripts/auto-concert-organizer.js --auto",
    "organize:preview": "node scripts/auto-concert-organizer.js --auto --dry",
    "organize:folders": "node scripts/auto-concert-folder-organizer.js",
    "organize:folders-preview": "node scripts/auto-concert-folder-organizer.js --dry-run",
    "manifest:concert": "node scripts/generate-concert-manifest.js",
    "build:concert": "npm run organize:folders && npm run manifest:concert",
    "watch:concert": "node scripts/watch-concert-folders.js",
    "manifest:universal": "node scripts/generate-universal-manifest.js",
    "build:universal": "npm run organize:folders && npm run manifest:concert && npm run manifest:universal",
    "watch:universal": "node scripts/watch-universal-portfolios.js",
    "build:optimized": "npm run build:universal"
  },
  "keywords": [
    "photography",
    "gallery",
    "portfolio",
    "website"
  ],
  "author": "McCal Media",
  "license": "MIT",
  "devDependencies": {
    "chokidar": "^3.5.3",
    "http-server": "^14.1.1",
    "open": "^10.1.0"
  },
  "optionalDependencies": {
    "netlify-cli": "^17.0.0",
    "surge": "^0.23.1",
    "vercel": "^32.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "exif-parser": "^0.1.12"
  }
}
