{
  "name": "mccal-media-website",
  "version": "1.0.0",
  "description": "McCal Media photo gallery website with development tools",
  "main": "site/index.html",
  "scripts": {
    "dev": "node dev-server.js",
    "start": "npm run dev",
    "build": "node scripts/build.js",
    "serve": "node dev-server.js --production",
    "test-deploy": "./scripts/deploy-test.sh",
    "deploy": "node deploy.js",
    "deploy:quick": "node deploy.js netlify",
    "deploy:all": "node deploy.js all",
    "deploy:netlify": "npx netlify deploy --dir=dist --prod",
    "deploy:vercel": "npx vercel dist --prod",
    "deploy:surge": "npx surge dist/ --domain mccal-media.surge.sh",
    "package": "npm pack",
    "docker:build": "docker build -t mccal-media-website .",
    "docker:run": "docker run -p 8080:8080 mccal-media-website",
    "docker:deploy": "docker build -t mccal-media-website . && docker run -d -p 8080:8080 --name mccal-website mccal-media-website"
  },
  "keywords": ["photography", "gallery", "portfolio", "website"],
  "author": "McCal Media",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "chokidar": "^3.5.3",
    "open": "^10.1.0"
  },
  "optionalDependencies": {
    "netlify-cli": "^17.0.0",
    "vercel": "^32.0.0",
    "surge": "^0.23.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}